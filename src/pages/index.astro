---
import Layout from "../layouts/BaseLayout.astro";

const posts = await Astro.glob("../content/blog/*.md");

// Sort newest → oldest
posts.sort((a, b) => new Date(b.data.date) - new Date(a.data.date));
---

<Layout title="HiFi Studio & Mobile — Tech Tips, Mobile Reviews & Gadget Guides">
  <!-- HERO SECTION -->
  <section class="w-full bg-gray-900 text-white py-16 px-6 text-center">
    <h1 class="text-4xl font-bold mb-3">HiFi Studio & Mobile</h1>
    <p class="text-lg opacity-90 max-w-2xl mx-auto">
      Your daily guide for smartphones, repairs, gadgets, speakers & smart accessories.
    </p>
  </section>

  <!-- LATEST BLOG POSTS -->
  <section class="container mx-auto py-12 px-6">
    <h2 class="text-2xl font-semibold mb-6">Latest Posts</h2>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {posts.map((post) => (
        <a href={post.url} class="block border rounded-lg overflow-hidden hover:shadow-lg transition">
          {post.data.image && (
            <img src={post.data.image} alt={post.data.title} class="w-full h-40 object-cover" />
          )}
          <div class="p-4">
            <h3 class="font-semibold text-lg mb-2">{post.data.title}</h3>
            {post.data.description && (
              <p class="text-sm opacity-75">{post.data.description}</p>
            )}
            <p class="text-xs mt-3 opacity-60">
              {post.data.date ? new Date(post.data.date).toLocaleDateString() : ""}
            </p>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>
