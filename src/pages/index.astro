---
import Layout from "../layouts/BaseLayout.astro";

// Import blog posts
const allPosts = import.meta.glob("../content/blog/*.md", { eager: true });
const posts = Object.values(allPosts);

// Sort newest → oldest (safe sort even if missing dates)
posts.sort((a, b) => {
  const dateA = new Date(a.frontmatter?.date ?? 0);
  const dateB = new Date(b.frontmatter?.date ?? 0);
  return dateB - dateA;
});
---

<Layout title="HiFi Studio & Mobile — Tech Tips, Mobile Reviews & Gadget Guides">
  <!-- HERO SECTION -->
  <section class="relative w-full h-[320px] md:h-[420px] lg:h-[520px] overflow-hidden">
    <img src="/images/hero.jpg" alt="HiFi Studio & Mobile" class="absolute inset-0 w-full h-full object-cover" />
    <div class="absolute inset-0 bg-black/50"></div>
    <div class="relative z-10 flex flex-col justify-center items-center h-full text-center text-white px-6">
      <h1 class="text-4xl md:text-5xl font-bold mb-3">HiFi Studio & Mobile</h1>
      <p class="text-lg opacity-90 max-w-2xl mx-auto">
        Your daily guide for smartphones, repairs, gadgets, speakers & smart accessories.
      </p>
    </div>
  </section>

  <section class="container mx-auto py-12 px-6">
    <h2 class="text-2xl font-semibold mb-6">Latest Posts</h2>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {posts.map((post) => (
        <a href={post.url} class="block border rounded-lg overflow-hidden hover:shadow-lg transition">
          {post.frontmatter.image && (
            <img src={post.frontmatter.image} alt={post.frontmatter.title} class="w-full h-40 object-cover" />
          )}
          <div class="p-4">
            <h3 class="font-semibold text-lg mb-2">{post.frontmatter.title}</h3>
            {post.frontmatter.description && (
              <p class="text-sm opacity-75">{post.frontmatter.description}</p>
            )}
            <p class="text-xs mt-3 opacity-60">
              {post.frontmatter.date
                ? new Date(post.frontmatter.date).toLocaleDateString()
                : ""}
            </p>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>
